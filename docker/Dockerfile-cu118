FROM nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu22.04 AS base

# Set noninteractive installation
ENV DEBIAN_FRONTEND=noninteractive

# Set CUDA environment variables
ENV CUDA_HOME=/usr/local/cuda
ENV PATH=${CUDA_HOME}/bin:${PATH}
ENV LD_LIBRARY_PATH=${CUDA_HOME}/lib64:${LD_LIBRARY_PATH}
ENV TORCH_CUDA_ARCH_LIST="7.0;7.5;8.0;8.6;8.9;9.0"

# Install python 3.9 and pip
RUN apt-get update && apt-get install -y \
    software-properties-common \
    && apt-get update \
    && apt-get install -y \
    python3 \
    python3-pip \
    build-essential \
    ninja-build \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip and install torch build dependencies
RUN python3 -m pip install --upgrade pip \
    && python3 -m pip install setuptools wheel ninja

# Checkpoint this layer
FROM base AS pytorch

# Install PyTorch with CUDA 11.8 support
RUN pip install torch==2.5.1 --index-url https://download.pytorch.org/whl/cu118

# Set working directory
WORKDIR /fireants

# Copy the code
COPY . .

# Install the package in editable mode
RUN pip install .

# Install fused ops
RUN cd fused_ops && python setup.py build_ext && python setup.py install && cd ..
